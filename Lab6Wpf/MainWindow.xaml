<Window x:Class="Lab6Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Умные тостеры" Height="600" Width="900"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель фильтров -->
        <GroupBox Header="Фильтрация и сортировка" Margin="0,0,0,10">
            <WrapPanel Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                <TextBox Name="FilterTextBox" Width="150" Margin="5" ToolTip="Имя товара" />
                <TextBox Name="PriceMinTextBox" Width="80" Margin="5" ToolTip="Цена от" />
                <TextBox Name="PriceMaxTextBox" Width="80" Margin="5" ToolTip="Цена до" />
                <TextBox Name="BrandTextBox" Width="150" Margin="5" ToolTip="Производитель" />
                <TextBox Name="SupplierTextBox" Width="150" Margin="5" ToolTip="Поставщик" />
                <CheckBox Name="WifiCheckBox" Content="Wi-Fi" Margin="5"/>
                <CheckBox Name="TouchCheckBox" Content="Touchscreen" Margin="5"/>
                <ComboBox Name="ManagementTypeComboBox" Width="150" Margin="5">
                    <ComboBoxItem Content="Все" IsSelected="True"/>
                    <ComboBoxItem Content="Mechanical"/>
                    <ComboBoxItem Content="Electronic"/>
                    <ComboBoxItem Content="Automatic"/>
                    <ComboBoxItem Content="SmartControl"/>
                </ComboBox>
                <ComboBox Name="SortFieldComboBox" Width="150" Margin="5" SelectedIndex="0">
                    <ComboBoxItem Content="Название" />
                    <ComboBoxItem Content="Производитель" />
                    <ComboBoxItem Content="Поставщик" />
                    <ComboBoxItem Content="Цена" />
                    <ComboBoxItem Content="Тип управления" />
                    <ComboBoxItem Content="Wi-Fi" />
                    <ComboBoxItem Content="Touchscreen" />
                </ComboBox>
                <ComboBox Name="SortOrderComboBox" Width="130" Margin="5" SelectedIndex="0">
                    <ComboBoxItem Content="По возрастанию" />
                    <ComboBoxItem Content="По убыванию" />
                </ComboBox>
                <Button Content="Фильтровать" Width="100" Margin="5" Click="FilterButton_Click"/>
                <Button Content="Сбросить" Width="100" Margin="5" Click="ResetButton_Click"/>
                <Button Content="Сортировать" Width="100" Margin="5" Click="SortButton_Click"/>
            </WrapPanel>
        </GroupBox>


        <!-- Таблица -->
        <DataGrid Name="ItemsDataGrid" Grid.Row="1" Margin="0,0,0,10" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Производитель" Binding="{Binding Brand}" Width="*" />
                <DataGridTextColumn Header="Поставщик" Binding="{Binding Supplier}" Width="*" />
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="*" />
                <DataGridTextColumn Header="Тип управления" Binding="{Binding TypeOfManagement}" Width="*" />
                <DataGridCheckBoxColumn Header="Wi-Fi" Binding="{Binding HasWifi}" Width="*" />
                <DataGridCheckBoxColumn Header="Touchscreen" Binding="{Binding HasTouchScreen}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Сводка" Margin="5" Click="ShowSummary_Click"/>
            <Button Content="По типам управления" Margin="5" Click="ShowCountByType_Click"/>
            <Button Content="Первые 5 товаров" Margin="5" Click="ShowFirstFiveItems_Click"/>
            <Button Content="Уникальные товары" Margin="5" Click="ShowUniqueItems_Click"/>
        </StackPanel>
    </Grid>
</Window>
